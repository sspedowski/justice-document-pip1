{
  "name": "justice-dashboard",
  "version": "1.0.0",
  "description": "Justice Dashboard for secure case tracking and legal document analysis.",
  "type": "module",
  "main": "backend/server.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:client dev:server",
    "dev:client": "vite --host",
    "dev:server": "nodemon backend/server.js",
    "build:css": "postcss frontend/styles.css -o frontend/dist/output.css",
    "watch:css": "postcss frontend/styles.css -o frontend/dist/output.css --watch",
    "build": "npm run build:css && vite build",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "start": "node backend/server.js",
    "start:prod": "cross-env NODE_ENV=production node backend/server.js",
    "deploy:firebase": "npm run build:prod && firebase deploy",
    "deploy:vercel": "npm run build:prod && vercel --prod",
    "deploy:check": "cross-env NODE_ENV=production node deployment-check.js",
    "deploy:check:win": "set NODE_ENV=production && node deployment-check.js",
    "extract-env": "node extract-env.js",
    "test": "jest --env=jsdom --config jest.config.js",
    "test:watch": "jest --env=jsdom --config jest.config.js --watch",
    "test:coverage": "jest --env=jsdom --config jest.config.js --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "security:check": "npm audit && npm run lint",
    "check": "node check-files.js",
    "cleanup": "bash cleanup-and-structure.sh",
    "cleanup:windows": "powershell -ExecutionPolicy Bypass -File cleanup-and-structure.ps1",
    "test-pdf": "python test_pdf_processing.py",
    "update-pdf": "python update_pdf_links.py",
    "update-pdf-links": "node scripts/update-pdf-links.js"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.1",
    "firebase": "^11.10.0",
    "firebase-admin": "^13.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "openai": "^4.104.0",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^3.2.0",
    "tesseract.js": "^6.0.1",
    "undici": "^6.6.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^16.1.2",
    "markdownlint-cli": "^0.45.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.11",
    "vite": "^7.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": "22.x"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11",
    "not op_mini all",
    "Chrome >= 54",
    "Firefox >= 60",
    "Safari >= 12",
    "Edge >= 79"
  ]
}
