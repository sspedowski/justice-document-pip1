{
  "name": "justice-dashboard",
  "version": "1.0.0",
  "description": "Justice Dashboard for secure case tracking",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:client dev:server",
    "dev:client": "vite --host",
    "dev:server": "nodemon server.js",
    "lint": "eslint .",
    "husky:check": "husky -v",
    "test": "echo \"No tests defined\" && exit 0",
    "build": "vite build",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/output.css --minify",
    "start": "node server.js"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.1",
    "firebase": "^11.10.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "openai": "^4.104.0",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^3.2.0",
    "tesseract.js": "^6.0.1"

  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.31.0",
    "husky": "^9.1.7",
    "jest": "^29.6.1",
    "markdownlint-cli": "^0.45.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "vite": "^7.0.5"
  },
  "engines": {
    "node": "22.x"
  }
}
