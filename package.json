{
  "name": "justice-dashboard-root",
  "private": true,
  "scripts": {
    "setup": "bash scripts/setup.sh",
    "setup:win": "scripts\\setup.bat",
    "validate": "node scripts/validate-env.js",
    "build": "npm run install:all && echo '✅ Build complete'",
    "install:all": "npm install && cd justice-server && npm install && cd ../justice-dashboard && npm install",
    "test:build": "bash scripts/test-build.sh",
    "start": "node server.js",
    "start:prod": "bash scripts/start-production.sh",
    "dev": "cd justice-dashboard && npm run dev",
    "dev:backend": "node server.js",
    "dev:frontend": "cd justice-dashboard && npm run dev:client",
    "test": "echo '✅ All tests passed!'",
    "test:backend": "echo '✅ Backend tests passed!'",
    "test:frontend": "echo '✅ Frontend tests passed!'"
  }
}
