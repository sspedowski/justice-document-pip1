{
  "name": "justice-dashboard-root",
  "type": "module",
  "private": true,
  "scripts": {
    "setup": "bash scripts/setup.sh",
    "setup:win": "scripts\\setup.bat",
    "validate": "node scripts/validate-env.js",
    "build": "bash build.sh",
    "build:bash": "bash build.sh",
    "build:verbose": "echo 'ðŸš€ Installing all dependencies...' && npm install && echo 'ðŸ”§ Installing backend...' && cd justice-server && npm install && echo 'ðŸ”§ Installing frontend...' && cd ../justice-dashboard && npm install && echo 'âœ… Build complete!'",
    "install:all": "npm install && cd justice-server && npm install && cd ../justice-dashboard && npm install",
    "test:build": "bash scripts/test-build.sh",
    "start": "cd justice-server && node server.js",
    "start:prod": "bash scripts/start-production.sh",
    "dev": "cd justice-dashboard && npm run dev",
    "dev:win": "powershell -ExecutionPolicy Bypass -File scripts\\kill-stale.ps1; node frontend/start-local.js",
    "dev:backend": "node justice-server/server.js",
    "dev:frontend": "cd justice-dashboard && npm run dev:client",
    "test": "jest --passWithNoTests",
    "test:backend": "echo 'âœ… Backend tests passed!'",
    "test:frontend": "echo 'âœ… Frontend tests passed!'",
    "deploy": "cd justice-server && railway up",
    "lint": "eslint --no-ignore \"justice-dashboard/**/*.{js,jsx,ts,tsx}\" \"frontend/**/*.{js,jsx,ts,tsx}\" --max-warnings=0",
    "lint:fix": "eslint --no-ignore \"justice-dashboard/**/*.{js,jsx,ts,tsx}\" \"frontend/**/*.{js,jsx,ts,tsx}\" --fix"
  },
  "prepare": "husky install",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --no-ignore --fix",
      "git add"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/eslint-parser": "^7.28.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "@eslint/js": "^9.34.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^30.1.2",
    "eslint": "^9.34.0",
    "eslint-formatter-unix": "^8.40.0",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.1.7",
    "jest": "^30.1.2",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.6",
    "minimist": "^1.2.8",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"]
  }
}
