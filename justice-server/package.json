{
  "name": "justice-dashboard",
  "version": "1.0.0",
  "description": "Justice Dashboard for secure case tracking",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:client dev:server",
    "dev:client": "vite --config justice-dashboard/vite.config.js --port 5173",
    "dev:server": "nodemon justice-dashboard/backend/server.js",
    "start": "node justice-dashboard/backend/server.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --config justice-dashboard/vite.config.js",
    "build:server": "echo 'No dedicated server build needed, using node directly'",
    "lint": "eslint . --ext js --ext jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js --ext jsx --fix",
    "format": "prettier --write .",
    "test": "jest",
    "check": "node justice-dashboard/check-files.js",
    "extract-env": "node justice-dashboard/extract-env.js",
    "cleanup": "bash justice-dashboard/cleanup-and-structure.sh",
    "cleanup:windows": "powershell -File justice-dashboard/cleanup-and-structure.ps1"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.1",
    "firebase": "^11.10.0",
    "firebase-admin": "^13.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "openai": "^4.104.0",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^3.2.0",
    "tesseract.js": "^6.0.1",
    "axios": "^1.10.0",
    "body-parser": "^2.2.0",
    "pdf-lib": "^1.17.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^16.1.2",
    "markdownlint-cli": "^0.45.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "vite": "^7.0.5"
  },
  "engines": {
    "node": "22.x"
  }
}